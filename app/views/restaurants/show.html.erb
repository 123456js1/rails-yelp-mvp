<div class="m-2">
  <div>
    <h1><%= @restaurant.name %></h1>
    <ul class="list-group">
      <li>Address: <%= @restaurant.address %></li>
      <li>Phone number: <%= @restaurant.phone_number %></li>
      <li>Category: <%= @restaurant.category %></li>
    </ul>
  </div>
  <p><%= link_to "+ Add Review", new_restaurant_review_path(@restaurant) %></p>
  <div>
    <p><strong>Reviews</strong></p>
    <ul class="list-group">
      <% @restaurant.reviews.each do |review| %></p>
        <li><%= review.content %> rating: <%= review.rating %></li>
      <% end %>
    </ul>
  </div>
</div>
